% 〜 番号付きリスト 〜 %
\newcounter{linenumber}
\newenvironment{listing}{%
  \begin{list}{%
    \footnotesize\arabic{linenumber}}{%
      \usecounter{linenumber}%
      \setlength{\baselineskip}{13pt}%
      \setlength{\itemsep}{0pt}%
      \setlength{\parsep}{0pt}}}%
  {\end{list}}


