% 〜 例 〜 %
\newcounter{exampleCount}
\newenvironment{example}[1]{%
\refstepcounter{exampleCount}
\vspace{1mm}
\parindent=3cm
  \begin{quotation}{%
    \hspace*{-6mm}\textbf{例\arabic{exampleCount}} \ #1}
    \small}{%
  \begin{flushright}\fbox{}\end{flushright}
  \end{quotation}}


% 〜 定義 〜 %
\newcounter{definitionCount}
\newenvironment{definition}[2]{%
\vspace{1mm}
\refstepcounter{definitionCount}
\begin{minipage}{133mm}
  \begin{itembox}[l]{\textbf{定義\arabic{definitionCount} \ #1}}{%
    #2}
    \begin{enumerate}}{%
    \end{enumerate}
  \end{itembox}
\end{minipage}
\vspace{4mm}}

\newenvironment{definition2}[1]{%
\vspace{1mm}
\refstepcounter{definitionCount}
\begin{minipage}{133mm}
  \begin{itembox}[l]{\textbf{定義\arabic{definitionCount} \ #1}}}{%
  \end{itembox}
\end{minipage}
\vspace{4mm}}

